<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context="com.example.ady.cameraemicalculatorpersonlist.MainActivity">

    <TextView
        android:id="@+id/title3in1"
        android:textSize="25sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="15sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Three In One App!"



        />

    <TextView
        android:id="@+id/instroctiions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Choose One of The Following Features This App can Provide! "
        android:textColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"


        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/picture"
        android:text="Take a Picture"
        android:background="@color/picture"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20sp"
        android:onClick="gothepicture"



        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EMICalculator"
        android:text="EMI Calculator"
        android:background="@color/picture"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20sp"
        android:onClick="gotoEMIcalculator"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PersonList"
        android:text="Add clients to the list"
        android:background="@color/picture"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="20sp"
        android:onClick="GotoaddClients"


        />


</LinearLayout>
