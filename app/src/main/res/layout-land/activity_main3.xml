<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ady.cameraemicalculatorpersonlist.Main3Activity">

    <TextView
        android:id="@+id/tvdisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />





    <SeekBar

        android:id="@+id/Seek1"
        android:layout_below="@+id/tvdisplay"
        android:layout_width="match_parent"


        android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toLeftOf="@+id/Seek1"
            android:text="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Seek1"
            android:layout_toRightOf="@+id/Seek1"
            android:text="35"
            android:id="@+id/textView3" />

    <SeekBar
        android:id="@+id/Seek2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="89dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Seek2"
            android:layout_toLeftOf="@+id/Seek2"
            android:text="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Seek2"
            android:layout_toRightOf="@+id/Seek2"
            android:text="15"
            android:id="@+id/textView2" />

    <SeekBar
        android:id="@+id/Seek3"


        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="191dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Seek3"
            android:layout_toLeftOf="@+id/Seek3"
            android:text="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Seek3"
            android:layout_toRightOf="@+id/Seek3"
            android:text="10000"

            />
    </RelativeLayout>


